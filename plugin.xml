<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.w3.org/ns/widgets"
    id="nat-network-stream"
    version="0.1.0">
    <name>nat-network-stream</name>
    <description></description>
    <license>MIT</license>
    <keywords>weex,plugin,nat,natjs,network,fetch</keywords>
    <repo>https://github.com/Natjs/weex-nat-network-stream.git</repo>
    <issue>https://github.com/Natjs/weex-nat-network-stream/issues</issue>
    
     <!-- ios -->
     <platform name="ios">
         <framework src="NatStream" type="podspec" spec="" />
         <config-file target="WeexpluginConfig.xml" parent="/*">
             <feature name="WXTestModule">
                 <param name="category" value="module" />
                 <param name="ios-package" value="WeexNatStream" />
                 <param name="api" value="nat/network/stream" />
             </feature>
         </config-file>
         <header-file src="ios/WeexNatStream.h"/>
         <source-file src="ios/WeexNatStream.m"/>
     </platform>

     <!-- android -->
     <platform name="android">
        <config-file target="config.xml" parent="/*">
             <feature name="NetworkStreamModule">
                 <param name="category" value="module" />
                 <param name="android-package" value="com.nat.weex.NetworkStreamModule" />
                 <param name="api" value="nat/network/stream" />
             </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
             <uses-permission android:name="android.permission.INTERNET" />
             <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
             <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        </config-file>

        <source-file
             src="android/NetworkStreamModule.java"
            target-dir="src/com/alibaba/weex/nat/NetworkStreamModule.java" />

        <framework src="com.nat:network-stream:1.0.1" />
     </platform>

</plugin>
